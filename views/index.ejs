<%- include('./partials/_header') %>

<main class="flex-grow flex-column h-100 container-fluid">
  <div class="container-xl flex">
    <div class="flex-grow">
      <div>
        <h1><%- title %></h1>
        <%- content %>
      </div>
    </div>
    <% if (site.description) { %>
      <div class="sidebar ml-2 flex-noshrink">
        <h4>About</h4>
        <div class="muted">
          <%- site.description %>
        </div>
        <%- slot('about') %>
      </div>
    <% } %>
  </div>
</main>

<%- include('./partials/_footer') %>
